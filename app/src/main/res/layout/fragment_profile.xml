<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.jnec.techfest.swayambhu.Profile"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="290dp"
             android:background="@drawable/profile_bg"
             android:orientation="vertical">
             

             <TextView
                 android:id="@+id/profile_Username"
                 android:padding="8dp"
                 android:layout_gravity="center"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="21sp"
                 android:textStyle="bold"

                 android:text="Mr. XYZ"
                 android:textColor="@color/white"/>
         </LinearLayout>
        
        <android.support.v7.widget.CardView
            android:layout_marginTop="200dp"
            android:layout_centerHorizontal="true"
            android:layout_width="290dp"
            android:layout_height="290dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>
            
            <LinearLayout
                android:paddingTop="50dp"
                android:paddingLeft="34dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView

                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/ic_email_profile_24dp"/>
                <TextView
                    android:id="@+id/profile_email"
                    android:paddingTop="5dp"
                    android:paddingLeft="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18dp" />

                
            </LinearLayout>


            <LinearLayout
                android:paddingTop="120dp"
                android:paddingLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView

                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:srcCompat ="@drawable/ic_phone_iphone_profile_24dp"/>

                <TextView
                    android:id="@+id/profile_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="18dp"
                    android:paddingTop="5dp"
                    android:text="9999999999"
                    android:textSize="18dp"
                    android:textStyle="bold" />


            </LinearLayout>


            <LinearLayout
                android:paddingTop="190dp"
                android:paddingLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView

                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/ic_school_black_24dp"/>
                <TextView
                    android:id="@+id/profile_college"
                    android:paddingTop="5dp"
                    android:paddingLeft="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="Jawaharlal Nehru Egineering College"/>


            </LinearLayout>





        </android.support.v7.widget.CardView>





            
    </RelativeLayout>


    </ScrollView>

</LinearLayout>
